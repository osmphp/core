{
    "name": "osmphp/core",
    "description": "A PHP library for making modular and extensible applications",
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "Vladislav Osmianskij",
            "email": "vlaosm@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-mbstring": "*",
        "symfony/lock": "^5",
        "nikic/php-parser": "^4",
        "phpdocumentor/reflection-docblock": "^5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "files": [
            "runtime/functions.php"
        ],
        "psr-4": {
            "Osm\\Runtime\\": "runtime/",
            "Osm\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Osm\\Core\\Tests\\": "tests/",
            "Osm\\Core\\Samples\\": "samples/"
        }
    }
}