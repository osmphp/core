{
    "name": "osmphp/core",
    "autoload": {
        "psr-4": {
            "Osm\\Core\\": "src/",
            "Osm\\Core\\Tests\\": "tests/",
            "Osm\\Core\\Samples\\": "samples/"
        }
    },
    "require": {
        "php": ">=7.3"
    },
    "extra": {
        "osm": {
            "component_pools": {
                "src": {
                    "module_path": "*/Module.php",
                    "theme_path": "*/theme.php"
                },
                "samples": {
                    "module_path": "*/Module.php",
                    "testing": true
                }
            }
        }
    }
}