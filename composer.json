{
    "name": "osmphp/core",
    "description": "PHP library for making modular and extensible applications",
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "Vladislav Osmianskij",
            "email": "vlaosm@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-mbstring": "*",
        "symfony/lock": "^5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "symfony/process": "^5"
    },
    "autoload": {
        "files": [
            "src/functions.php"
        ],
        "psr-4": {
            "Osm\\Runtime\\": "src/",
            "Osm\\Core\\": "modules/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Osm\\Runtime\\Tests\\": "tests/",
            "Osm\\Runtime\\SampleModules\\": "sample-modules/"
        }
    }
}