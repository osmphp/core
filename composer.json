{
    "name": "osmphp/core",
    "description": "PHP library for handling extensible modules",
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "Vladislav Osmianskij",
            "email": "vlaosm@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Osm\\Core\\": "src/",
            "Osm\\Core\\Tests\\": "tests/",
            "Osm\\Core\\Samples\\": "samples/"
        }
    },
    "require": {
        "php": ">=7.3"
    },
    "extra": {
        "osm": {
            "component_pools": {
                "src": {
                    "module_path": "*/Module.php",
                    "theme_path": "*/theme.php"
                },
                "samples": {
                    "module_path": "*/Module.php",
                    "testing": true
                }
            }
        }
    }
}